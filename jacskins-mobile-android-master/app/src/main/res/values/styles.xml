<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black_alpha</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/azure</item>
        <item name="android:windowBackground">@color/white_smoke</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>

        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="AppTheme.Toolbar.Title">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Item.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="AppTheme.Item">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="WhiteTextInputTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ButtonPrimary">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:background">@drawable/button_primary_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.ButtonBuy">
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:background">@drawable/button_secondary_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.ButtonInverted">
        <item name="android:background">@drawable/shape_inverted_bg</item>
        <item name="android:textColor">@color/white_alpha_seventy</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
    </style>

    <style name="AppTheme.ButtonSecondary">
        <item name="android:textColor">@drawable/button_secondary_text_color</item>
        <item name="android:background">@drawable/button_secondary_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>

    </style>

    <style name="AppTheme.ButtonTranslucent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_transparent_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>

    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Signin">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Signin.RememberDocument">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.CheckBox">
        <item name="android:scaleX">1.111</item>
        <item name="android:scaleY">1.111</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lion</item>
        <item name="colorControlActivated">@color/duskYellow</item>
    </style>

</resources>
