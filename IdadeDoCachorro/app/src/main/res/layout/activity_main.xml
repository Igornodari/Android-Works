<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padtxt"
    android:background="@android:color/holo_orange_light"
    android:padding="@dimen/padtxt"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="311dp"
        android:layout_height="81dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="21dp"
        android:elegantTextHeight="false"
        android:text="Digite a idade do seu cachorro para convertermos para idade humana"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/idadeDogID"
        app:layout_constraintEnd_toEndOf="@+id/idadeDogID"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="37dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cachorro" />

    <EditText
        android:id="@+id/idadeDogID"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="11dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="@dimen/padtxt"
        app:layout_constraintBottom_toTopOf="@+id/buttonid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonid"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="14dp"
        android:background="@android:drawable/bottom_bar"
        android:text="VERIFICAR"
        app:layout_constraintBottom_toTopOf="@+id/resultId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idadeDogID" />

    <TextView
        android:id="@+id/resultId"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginBottom="38dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="@dimen/padtxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonid" />

</android.support.constraint.ConstraintLayout>