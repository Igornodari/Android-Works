<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im_foto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/person"
        android:background="#00A8ec"
        />
    <Button
        android:id="@+id/bt_foto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:textSize="40sp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />
</RelativeLayout>


        <EditText
            android:id="@+id/nome_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome"
            />

        <EditText
            android:id="@+id/end_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/endere_o"
             />

        <EditText
            android:id="@+id/tell_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telefone"
            />

        <EditText
            android:id="@+id/site_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/site" />

        <RatingBar
            android:id="@+id/nota_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="10"
            android:numStars="5"
            />


    </LinearLayout>
</ScrollView>