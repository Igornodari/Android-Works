<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:http="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_produtoTitle_adm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                tools:text="BaionetaTESTE"
                app:layout_constraintStart_toEndOf="@+id/iv_imagePruduto_adm"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_produtoDesc_adm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/tv_produtoTitle_adm"
                app:layout_constraintTop_toBottomOf="@+id/tv_produtoTitle_adm"
                tools:text="Faca" />

            <TextView
                android:id="@+id/tv_produtoPreco_adm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/notaProduto_id_adm"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="R$1000,00" />

            <TextView
                android:id="@+id/tv_quantidade_adm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="Quantidade:"
                app:layout_constraintBottom_toTopOf="@+id/notaProduto_id_adm"
                app:layout_constraintStart_toEndOf="@+id/tv_produtoTitle_adm" />

            <TextView
                android:id="@+id/tv_quantidadeN_adm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_quantidade_adm"
                app:layout_constraintEnd_toStartOf="@+id/button"
                app:layout_constraintStart_toEndOf="@+id/tv_quantidade_adm"
                tools:text="7" />

            <RatingBar
                android:id="@+id/notaProduto_id_adm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:max="10"
                android:numStars="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/tv_produtoTitle_adm"
                app:layout_constraintTop_toBottomOf="@+id/tv_produtoDesc_adm"
                app:layout_goneMarginEnd="20dp" />

            <ImageView
                android:id="@+id/iv_imagePruduto_adm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:src="@mipmap/ic_pedidos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
